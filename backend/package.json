{
  "name": "llm-lab-backend",
  "version": "1.0.0",
  "description": "Backend for LLM Lab - parameter experimentation tool",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "start:prod": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "postinstall": "prisma generate"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@ai-sdk/mistral": "^2.0.19",
    "@prisma/client": "^6.18.0",
    "ai": "^5.0.78",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "env-var": "^7.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "pino": "^9.11.0",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.18.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
